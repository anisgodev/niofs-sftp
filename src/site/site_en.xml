<?xml version="1.0" encoding="UTF-8"?>
<project name="${project.name}">
    <version position="left"/>
    <bannerLeft>
        <name>${project.name}</name>
        <alt>Go to the start page</alt>
    </bannerLeft>

    <!-- With the out-of-the-box Velocity template, the position of the "Last Published" date is configurable.-->
    <publishDate position="right"/>
    <!--show the "Version"-->
    <version position="right"/>
    <!-- http://maven.apache.org/skins/maven-fluido-skin/ -->
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>false</sideBarEnabled>
            <topBarIcon>
                <name>Fluido Skin</name>
                <alt>Fluido Skin</alt>
                <src>/images/topbar-logo.png</src>
                <href>/index.html</href>
            </topBarIcon>
        </fluidoSkin>
    </custom>

    <body>
        <menu name="${project.name}" inherit="bottom">
            <item name="back" href=".."/>
        </menu>
        <menu ref="reports"/>
    </body>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.0</version>
    </skin>

</project>